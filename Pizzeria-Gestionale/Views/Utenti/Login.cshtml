@model Pizzeria_Gestionale.Model.Utenti

@{
    ViewBag.Title = "Login";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()



    <div class="card text-center floating" width="200">
        <div class="card-header colText">
            Login
        </div>
        <div class="card-body">
            <div class="form-floating mb-3">
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", type = "text", id = "floatingInput", placeholder = "Username" } })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                <label for="floatingInput">Username</label>
            </div>
            <div class="form-floating">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "password", id = "floatingPassword", placeholder = "Password" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                <label for="floatingPassword">Password</label>

            </div>
            <div class="form-group Entrabtn mt-3">
                <div>
                    <input type="submit" value="Entra" class="btn btn-outline-info" />
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div>
                @Html.ActionLink("Registrati", "Create")
            </div>
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
