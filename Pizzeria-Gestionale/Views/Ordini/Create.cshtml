@model Pizzeria_Gestionale.Model.Ordini

@{
    ViewBag.Title = "Create";
}

<h2>Conferma il tuo ordine</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Dettagli</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.IdUtente)
    <div class="fs-5">
        @Html.Label("Totale Pizze"): @ViewBag.totPizze
    </div>


    <div class="fs-5">
        @Html.Label("Totale Ordine"): @Html.DisplayFor(model => model.Totale)
    </div>



    <div class="fs-5">
        @Html.Label("Indirizzo consegna"): @Html.DisplayFor(model => model.Utenti.Indirizzo)
    </div>

</div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Procedi con l'ordine" class="btn btn-outline-success" />
        </div>
    </div>

}

<div>
    <a href="/Articoli_Ordine/cart">Modifica Carrello</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
